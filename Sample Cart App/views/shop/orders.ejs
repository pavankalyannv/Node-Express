    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                    <% orders.forEach(order => { %>
                     
                            <h1>Order - # <%= order._id %></h1>
                            
                                <% order.products.forEach(p => { %>
                                    <li ><%= p.product.title %> (<%= p.quantity %>)</li>
                                <% }); %>
                          
                       
                    <% }); %>
            
            <% } %>
        </main>
